<!--pages/demo2/demo2.wxml-->
<rich-text>轮播实例</rich-text>
<view class="banner-box">
  <swiper class="banner" autoplay="true" circular="true" bindchange="changeSwiper">
    <swiper-item class="banner-item" wx:for="{{banners}}">
      <view class="bannew-view">
        <navigator url="{{item.href}}">
          <image src="../../image/{{item.imgPath}}"></image>
        </navigator>
      </view>
    </swiper-item>
  </swiper>
  <view class="dots">
    <view class="dot {{index==current?'active':''}}" wx:for="{{banners}}">
    </view>
  </view>
</view>


<rich-text>效果横向轮播图</rich-text>
<swiper class="swiper" indicator-dots="true" duration="3000" autoplay="true" current="2"
  indicator-color="rgba(255,255,0,0.3)" indicator-active-color="#fff" interval="4000" circular="true">
  <swiper-item class="item i1">111</swiper-item>
  <swiper-item class="item i2">222</swiper-item>
  <swiper-item class="item i3">333</swiper-item>
</swiper>

